				<param name="visible" value="Container.Content(addons)" />
			</include>
			<include name="View_52_IconWall">
				<param name="visible" value="IsEmpty(Container.FolderPath)" />
			</include>
			<include name="View_53_Shift">
				<param name="visible" value="!IsEmpty(Container.FolderPath)" />
			</include>
		</control>
		<control type="group">
			<include>OpenClose_Left</include>
			<visible>Window.IsActive(addoninformation) | Control.IsVisible(50)</visible>
			<include>Visible_Left</include>
			<include>ListThumbInfoPanel</include>
		</control>
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9000">
				<top>90</top>
				<include name="MediaMenuListCommon">
					<param name="viewtype_button_vis" value="False" />
