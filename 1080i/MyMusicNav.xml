<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<menucontrol>9000</menucontrol>
	<views>50,52,53,500</views>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="Window.IsActive(addoninformation) | Window.IsActive(musicinformation)">Conditional</animation>
			<include name="View_50_List">
				<param name="visible" value="Container.Content(files) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons) | Container.Content(directors)" />
			</include>
			<include name="View_52_IconWall">
				<param name="visible" value="Container.Content() | Container.Content(years) | Container.Content(files) | Container.Content(genres) | Container.Content(playlists)" />
			</include>
			<include name="View_500_SmallThumb">
				<param name="layouts_include" value="SmallThumbMusicLayouts" />
				<param name="visible" value="Container.Content(artists) | Container.Content(albums)" />
			</include>
			<include name="View_53_Shift">
				<param name="visible" value="Container.Content(artists) | Container.Content(albums) | Container.Content(musicvideos)" />
			</include>
		</control>
		<control type="group">
			<include>OpenClose_Left</include>
			<visible>Control.IsVisible(50) | Window.IsActive(musicinformation)</visible>
			<visible>Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons) | Container.Content(files)</visible>
			<include>Visible_Left</include>
			<include>ListThumbInfoPanel</include>
		</control>
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9000">
				<top>90</top>
				<include name="MediaMenuListCommon">
					<param name="viewtype_button_vis" value="Container.Content(artists) | Container.Content(albums) | Container.Content(files)" />
				</include>
				<control type="radiobutton" id="710">
					<description>Small List</description>
					<label>Small list</label>
					<include>MediaMenuItemsCommon</include>
					<onclick>Skin.ToggleSetting(small_list)</onclick>
					<selected>Skin.HasSetting(small_list)</selected>
					<visible>Container.Content(songs)</visible>
				</control>
				<control type="label" id="203">
					<description>Actions</description>
					<include>MediaMenuLabelCommon</include>
					<label>$LOCALIZE[31020]</label>
				</control>
				<control type="button" id="619">
					<description>Update library</description>
					<include>MediaMenuItemsCommon</include>
					<label>$VAR[LibraryScanLabelVar]</label>
					<onclick>UpdateLibrary(music)</onclick>
				</control>
				<control type="button" id="16">
					<label>$LOCALIZE[589]</label>
					<include>MediaMenuItemsCommon</include>
				</control>
				<control type="button" id="620">
					<description>Go-to-root button</description>
					<include>MediaMenuItemsCommon</include>
					<label>$LOCALIZE[20128]</label>
					<onclick>Container.Update(/,replace)</onclick>
					<visible>!IsEmpty(Container.FolderPath)</visible>
				</control>
				<control type="button" id="612">
					<description>Go to playlist</description>
					<include>MediaMenuItemsCommon</include>
					<label>$LOCALIZE[31056]</label>
					<onclick>ActivateWindow(musicplaylist)</onclick>
					<visible>IntegerGreaterThan(Playlist.Length(music),0)</visible>
				</control>
			</control>
		</control>
		<include name="TopBar">
			<param name="breadcrumbs_label" value="$VAR[MusicBreadcrumbsVar]" />
			<param name="breadcrumbs_icon" value="icons/settings/music.png" />
		</include>
		<include>BottomBar</include>
	</controls>
</window>
