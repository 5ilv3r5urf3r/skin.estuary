<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include file="Defaults.xml" />
    <include file="Includes_Home.xml" />
    <include file="Includes_Animations.xml" />
    <include file="Includes_MediaMenu.xml" />
    <include file="View_50_List.xml" />
    <include file="View_51_Poster.xml" />
    <include file="View_52_IconWall.xml" />
    <include file="Variables.xml" />
    <constant name="FanartCrossfadeTime">400</constant>
    <constant name="IconCrossfadeTime">400</constant>
    <include name="HiddenObject">
        <posx>-3000</posx>
        <posy>-3000</posy>
        <width>1</width>
        <height>1</height>
        <texturefocus>-</texturefocus>
        <texturenofocus>-</texturenofocus>
        <label>-</label>
        <font>-</font>
    </include>
    <include name="DefaultSettingButton">
        <textoffsetx>45</textoffsetx>
        <top>0</top>
        <height>75</height>
        <font>font13</font>
        <textcolor>white</textcolor>
        <focusedcolor>white</focusedcolor>
        <invalidcolor>invalid</invalidcolor>
        <texturefocus border="150,1,150,1">lists/focus.png</texturefocus>
        <texturenofocus border="40">lists/separator.png</texturenofocus>
    </include>
    <include name="DialogBackgroundCommons">
        <control type="image">
            <description>background image</description>
            <posx>-1920</posx>
            <posy>-1080</posy>
            <width>5760</width>
            <height>3240</height>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <texture colordiffuse="B0FFFFFF">colors/black.png</texture>
            <visible>$PARAM[darken_bg]</visible>
        </control>
        <control type="image">
            <description>background image</description>
            <left>0</left>
            <top>0</top>
            <width>$PARAM[DialogBackgroundWidth]</width>
            <height>$PARAM[DialogBackgroundHeight]</height>
            <texture border="2">dialogs/dialog-bg-solid.png</texture>
        </control>
        <control type="image">
            <description>Dialog Header image</description>
            <left>0</left>
            <top>60</top>
            <width>$PARAM[DialogBackgroundWidth]</width>
            <height>3</height>
            <texture colordiffuse="button_focus" border="2">dialogs/separator.png</texture>
        </control>
        <control type="label" id="$PARAM[DialogHeaderId]">
            <description>header label</description>
            <left>40</left>
            <top>20</top>
            <width>$PARAM[DialogHeaderWidth]</width>
            <height>30</height>
            <font>font13_title</font>
            <label>$PARAM[DialogHeaderLabel]</label>
            <align>left</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
        </control>
    </include>
    <include name="TopBar">
        <control type="image">
            <description>InfoBarTop</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>80</height>
            <texture>frame/InfoBarTop.png</texture>
        </control>
        <control type="grouplist">
            <posx>5</posx>
            <description>Left side of top bar</description>
            <width>900</width>
            <orientation>horizontal</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <control type="image">
                <posy>10</posy>
                <width>80</width>
                <height>80</height>
                <aspectratio align="center">keep</aspectratio>
                <texture colordiffuse="button_focus">$PARAM[breadcrumbs_icon]</texture>
                <visible>!Player.HasMedia</visible>
            </control>
            <control type="label">
                <label>$PARAM[breadcrumbs_label]</label>
                <include>BreadcrumbsLabel</include>
            </control>
            <control type="label">
                <label>$VAR[BreadcrumbsLabel2Var]</label>
                <include>BreadcrumbsLabel</include>
                <visible>!Window.IsActive(PVR)</visible>
            </control>
            <control type="label">
                <label>$INFO[Control.GetLabel(10),: ]</label>
                <include>BreadcrumbsLabel</include>
                <visible>!Stringcompare(Control.GetLabel(10),$LOCALIZE[16100]) + Window.IsActive(videos)</visible>
            </control>
            <control type="label">
                <label>(Filtered)</label>
                <include>BreadcrumbsLabel</include>
                <visible>Container.Filtered</visible>
            </control>
        </control>
        <control type="grouplist">
            <description>Right side of top bar</description>
            <posx>1400</posx>
            <width>500</width>
            <align>right</align>
            <orientation>horizontal</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <animation effect="slide" start="0,0" end="-400,0" time="175" condition="Window.IsVisible(infodialog)">conditional</animation>
            <control type="label">
                <description>Weather label</description>
                <include>BreadcrumbsLabel</include>
                <label>$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits]</label>
                <visible>Weather.IsFetched + ![stringcompare(Weather.FanartCode,na) + substring(Weather.Conditions,/)]</visible>
            </control>
            <control type="image">
                <description>Weather</description>
                <posy>10</posy>
                <width>70</width>
                <height>60</height>
                <aspectratio align="left">keep</aspectratio>
                <texture colordiffuse="button_focus">weather/small/$INFO[Weather.FanartCode].png</texture>
                <visible>Weather.IsFetched + ![stringcompare(Weather.FanartCode,na) + substring(Weather.Conditions,/)]</visible>
            </control>
            <control type="label">
                <description>System Time</description>
                <include>BreadcrumbsLabel</include>
                <label>$INFO[System.Time]</label>
            </control>
            <control type="image">
                <description>System Time Clock</description>
                <posx>10</posx>
                <posy>24</posy>
                <height>32</height>
                <width>32</width>
                <texture>frame/clock.png</texture>
                <aspectratio>keep</aspectratio>
            </control>
        </control>
    </include>
    <include name="BreadcrumbsLabel">
        <font>font16</font>
        <textcolor>white</textcolor>
        <shadowcolor>text_shadow</shadowcolor>
        <posy>12</posy>
        <height>100</height>
        <width>auto</width>
        <align>left</align>
    </include>
    <include name="DefaultBackground">
        <control type="videowindow">
            <include>FullScreenDimensions</include>
            <visible>Player.HasVideo</visible>
        </control>
        <control type="visualisation">
            <include>FullScreenDimensions</include>
            <visible>Player.HasAudio</visible>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <animation effect="fade" start="100" end="80" time="0" condition="Player.HasMedia">Conditional</animation>
            <aspectratio>scale</aspectratio>
            <fadetime>400</fadetime>
            <texture>special://skin/extras/backgrounds/01.jpg</texture>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <fadetime>400</fadetime>
            <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
            <texture background="true" colordiffuse="20FFFFFF">$INFO[ListItem.Art(fanart)]</texture>
            <visible>!IsEmpty(ListItem.Art(fanart)) + !Player.HasMedia</visible>
        </control>
    </include>
    <include name="BottomBar">
        <control type="image">
            <description>List Panel</description>
            <posx>0</posx>
            <posy>1000</posy>
            <width>1920</width>
            <height>80</height>
            <texture border="1">frame/InfoBarBottom.png</texture>
        </control>
        <control type="label">
            <posy>1010</posy>
            <left>0</left>
            <width>1900</width>
            <height>50</height>
            <align>right</align>
            <font>font16</font>
            <textcolor>white</textcolor>
            <shadowcolor>text_shadow</shadowcolor>
            <label>$INFO[Container.NumItems,Items: [COLOR button_focus],[/COLOR]]$INFO[Container.CurrentPage,   â€¢   Page: [COLOR button_focus], / ]$INFO[Container.NumPages,,[/COLOR]]</label>
        </control>
    </include>
    <include name="KeyboardButton">
        <width>125</width>
        <height>125</height>
        <texturefocus border="40">buttons/button-theme-fo.png</texturefocus>
        <texturenofocus border="40">buttons/button-nofo.png</texturenofocus>
        <align>center</align>
        <aligny>center</aligny>
        <font>font16</font>
        <focusedcolor>white</focusedcolor>
    </include>
    <include name="FullscreenDimensions">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
    </include>
</includes>
