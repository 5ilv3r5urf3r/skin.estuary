<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <variable name="SelectLabel">
        <value condition="Control.IsVisible(3)">[COLOR=button_focus]$INFO[Container(3).NumItems][/COLOR] $LOCALIZE[31025] - $LOCALIZE[31024] [COLOR=button_focus]$INFO[Container(3).CurrentPage]/$INFO[Container(3).NumPages][/COLOR]</value>
        <value condition="Control.IsVisible(6)">[COLOR=button_focus]$INFO[Container(6).NumItems][/COLOR] $LOCALIZE[31025] - $LOCALIZE[31024] [COLOR=button_focus]$INFO[Container(6).CurrentPage]/$INFO[Container(6).NumPages][/COLOR]</value>
    </variable>
    <variable name="BannerArtVar">
        <value condition="!IsEmpty(ListItem.Art(banner))">$INFO[ListItem.Art(banner)]</value>
        <value>$INFO[ListItem.Art(fanart)]</value>
    </variable>
    <variable name="HomeFanartVar">
        <value condition="!IsEmpty(Container(5100).ListItem.Art(fanart)) + Control.HasFocus(5100)">$INFO[Container(5100).ListItem.Art(fanart)]</value>
        <value condition="!IsEmpty(Container(5200).ListItem.Art(fanart)) + Control.HasFocus(5200)">$INFO[Container(5200).ListItem.Art(fanart)]</value>
        <value condition="!IsEmpty(Container(5300).ListItem.Art(fanart)) + Control.HasFocus(5300)">$INFO[Container(5300).ListItem.Art(fanart)]</value>
        <value condition="!IsEmpty(Container(5400).ListItem.Art(fanart)) + Control.HasFocus(5400)">$INFO[Container(5400).ListItem.Art(fanart)]</value>
    </variable>
    <variable name="NowPlayingPosterVar">
        <value condition="!IsEmpty(Player.Art(poster))">$INFO[Player.Art(poster)]</value>
        <value>$INFO[Player.Art(tvshow.poster)]</value>
    </variable>
    <variable name="ListWatchedIcon">
        <value condition="ListItem.IsPlaying">overlays/watched/OverlayPlaying-List.png</value>
        <value condition="stringcompare(ListItem.Overlay,OverlayWatched.png)">overlays/watched/OverlayWatched-List.png</value>
        <value condition="stringcompare(ListItem.Overlay,OverlayUnwatched.png)">overlays/watched/OverlayEmpty-List.png</value>
    </variable>
    <variable name="SettingsSectionIcon">
        <value condition="Window.IsActive(picturessettings)">icons/settings/pictures.png</value>
        <value condition="Window.IsActive(programssettings)">icons/settings/programs.png</value>
        <value condition="Window.IsActive(weathersettings)">icons/settings/weather.png</value>
        <value condition="Window.IsActive(musicsettings)">icons/settings/music.png</value>
        <value condition="Window.IsActive(systemsettings)">icons/settings/system.png</value>
        <value condition="Window.IsActive(videossettings)">icons/settings/video.png</value>
        <value condition="Window.IsActive(servicesettings)">icons/settings/network.png</value>
        <value condition="Window.IsActive(appearancesettings)">icons/settings/appearance.png</value>
        <value condition="Window.IsActive(pvrsettings)">icons/settings/livetv.png</value>
    </variable>
    <!-- Breadcrumbs -->
    <variable name="BreadcrumbsVideoVar">
        <value condition="Container.Content(movies)">$LOCALIZE[20342]</value>
        <value condition="Container.Content(musicvideos)">$LOCALIZE[20389]</value>
        <value condition="Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + !SubString(Container.FolderName,$LOCALIZE[20373])]">$LOCALIZE[20343]</value>
        <value condition="Container.Content(episodes) + !SubString(Container.FolderPath,videodb://recentlyaddedepisodes/) + SubString(Container.FolderName,$LOCALIZE[20373])">$INFO[ListItem.TVShowTitle,$LOCALIZE[20343] / ]</value>
        <value condition="Window.IsActive(musicplaylisteditor)">$LOCALIZE[10503]</value>
        <value condition="Window.IsActive(musicplaylist)">$LOCALIZE[10517]</value>
        <value condition="Window.IsActive(skinsettings)">$LOCALIZE[5] / $LOCALIZE[20077]</value>
        <value condition="Window.IsActive(systeminfo)">$LOCALIZE[5] / $LOCALIZE[130]</value>
        <value condition="Window.IsActive(profilesettings)">$LOCALIZE[5] / $LOCALIZE[13200]</value>
        <value condition="Window.IsActive(loginscreen)">$INFO[Control.GetLabel(2)]</value>
        <value condition="Window.IsActive(weather)">$LOCALIZE[8]</value>
        <value condition="Window.IsActive(pictures)">$LOCALIZE[1213]</value>
        <value condition="Window.IsActive(filemanager)">$LOCALIZE[10003]</value>
        <value condition="Window.IsActive(script-NextAired-TVGuide.xml)">$LOCALIZE[31290]</value>
        <value condition="Window.IsActive(script-globalsearch-main.xml)">$LOCALIZE[283]</value>
        <value condition="Window.IsActive(script-Rom_Collection_Browser-main.xml)">Rom Collection Browser $INFO[ListItem.Property(romcollection), / ]</value>
        <value>$LOCALIZE[3]</value>
    </variable>
    <variable name="BreadcrumbsIconVar">
        <value condition="Container.Content(seasons) | Container.Content(tvshows) | Container.Content(episodes) | Window.IsActive(script-NextAired-TVGuide.xml)">common/tv_icon.png</value>
        <value condition="Window.IsActive(musicplaylisteditor) | Window.IsActive(musiclibrary) | Window.IsActive(musicfiles) | Window.IsActive(musicplaylist)">common/logo_music.png</value>
        <value condition="Window.IsActive(programs) | Window.IsActive(script-Rom_Collection_Browser-main.xml)">common/logo_games.png</value>
        <value condition="Window.IsActive(filemanager)">common/logo_playlist.png</value>
        <value condition="Window.IsActive(settings) | Window.IsActive(skinsettings) | Window.IsActive(systeminfo) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(profilesettings) | Window.IsActive(loginscreen)">common/settings_logo.png</value>
        <value condition="Window.IsActive(pictures)">common/logo_pics.png</value>
        <value condition="Window.IsActive(script-globalsearch-main.xml)">common/DefaultSearch.png</value>
        <value condition="Window.IsActive(PVR)">pvr/TVIcon.png</value>
        <value>common/puzzle_icon.png</value>
    </variable>
    <variable name="MusicLibraryUpdateVar">
        <value condition="Library.IsScanningMusic">Cancel update</value>
        <value>$LOCALIZE[653]</value>
    </variable>
    <variable name="VideoLibraryUpdateVar">
        <value condition="Library.IsScanningVideo">Cancel update</value>
        <value>$LOCALIZE[653]</value>
    </variable>
    <variable name="LibraryScanLabelVar">
        <value condition="Window.IsActive(videos) + library.IsScanningVideo">$LOCALIZE[13353]</value>
        <value condition="Window.IsActive(musiclibrary) + library.IsScanningMusic">$LOCALIZE[13353]</value>
        <value>$LOCALIZE[653]</value>
    </variable>
</includes>
