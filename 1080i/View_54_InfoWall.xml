						<left>190</left>
						<top>500</top>
						<width>32</width>
						<height>32</height>
						<animation effect="slide" end="0,20" time="200" tween="sine" easing="inout">Focus</animation>
						<animation effect="slide" start="0,20" end="0,0" time="200" tween="sine" easing="inout">UnFocus</animation>
						<texture>$VAR[WallWatchedIconVar]</texture>
					</control>
					<control type="group">
						<top>150</top>
						<left>80</left>
						<animation effect="zoom" start="100" end="115" time="200" tween="sine" easing="inout" center="210,332">Focus</animation>
						<animation effect="zoom" start="115" end="100" time="200" tween="sine" easing="inout" center="210,332">UnFocus</animation>
