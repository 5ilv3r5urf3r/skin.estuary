                    </control>
                    <control type="image" id="8309">
                        <posx>91</posx>
                        <posy>1006</posy>
                        <width>150</width>
                        <height>99</height>
                        <texture colordiffuse="grey" fallback="empty.png">$INFO[MusicPlayer.Codec,flags/audio/,.png]</texture>
                        <aspectratio>keep</aspectratio>
                        <visible>StringCompare(Control.GetLabel(8310),empty.png)</visible>
                    </control>
                    <control type="label">
                        <posx>244</posx>
                        <posy>992</posy>
