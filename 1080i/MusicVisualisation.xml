                    <font>font30_title</font>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>button_focus</textcolor>
                    <scroll>true</scroll>
                </control>
                <control type="label">
                    <posy>60</posy>
                    <width>1230</width>
                    <height>40</height>
                    <label>[COLOR grey]$INFO[MusicPlayer.Album][/COLOR]$INFO[MusicPlayer.Year, [,] ]</label>
                    <font>font30_title</font>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>button_focus</textcolor>
                    <scroll>true</scroll>
                </control>
                <control type="label">
                    <posy>110</posy>
                    <width>1275</width>
                    <height>40</height>
                    <label>$INFO[MusicPlayer.Artist]</label>
                    <font>font30_title</font>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>grey</textcolor>
                    <scroll>true</scroll>
                </control>
            </control>
            <control type="group">
                <posx>80</posx>
                <posy>717</posy>
                <include>OpenClose_FadeSlide_Right</include>
                <control type="image">
                    <animation effect="fade" start="0" end="100" time="200" delay="1000" condition="!IsEmpty(Player.Art(fanart)) + SubString(Window(Visualisation).Property(ArtistSlideshow),resources/black) + !Window.IsActive(musicosd) + !Window.IsActive(script-cu-lrclyrics-main.xml)">Conditional</animation>
                    <posx>955</posx>
                    <posy>-515</posy>
                    <width>798</width>
                    <height>474</height>
