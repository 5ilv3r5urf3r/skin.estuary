                    <posx>1840</posx>
                    <posy>-20</posy>
                    <width>400</width>
                    <height>45</height>
                    <align>right</align>
                    <aligny>bottom</aligny>
                    <label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
