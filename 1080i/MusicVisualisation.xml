            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <fadetime>400</fadetime>
            <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
            <texture background="true" colordiffuse="32FFFFFF">$INFO[Player.Art(fanart)]</texture>
            <visible>!IsEmpty(ListItem.Art(fanart)) + !Player.HasMedia</visible>
        </control>
        <control type="image">
            <texture colordiffuse="button_focus">special://skin/extras/backgrounds/$INFO[Skin.CurrentTheme].jpg</texture>
