<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Window.IsActive(fullscreeninfo) | Window.IsActive(videoosd)</visible>
	<visible>Window.IsActive(fullscreenvideo)</visible>
	<animation effect="fade" start="0" end="100" time="150">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
	<depth>DepthOSD</depth>
	<zorder>0</zorder>
	<controls>
		<control type="group">
			<top>890</top>
			<control type="image">
				<left>0</left>
				<width>110%</width>
				<height>200</height>
				<texture flipy="true">frame/InfoBar.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>110%</width>
				<height>200</height>
				<texture flipy="true">frame/InfoBar.png</texture>
			</control>
			<control type="group">
				<visible>!Window.IsVisible(videoosd)</visible>
				<control type="label">
					<top>110</top>
					<right>51</right>
					<width>400</width>
					<height>20</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>font25</font>
					<label>[COLOR button_focus]$LOCALIZE[21396]:  [/COLOR]$INFO[player.chapter]$INFO[player.chaptercount, / ]</label>
					<visible>player.chaptercount + Window.IsVisible(FullScreenVideo)</visible>
				</control>
				<control type="label">
					<left>40</left>
					<top>112</top>
					<width>240</width>
					<height>20</height>
					<aligny>center</aligny>
					<font>font25</font>
					<textcolor>button_focus</textcolor>
					<label>$VAR[SeekLabel]</label>
				</control>
				<control type="label">
					<top>145</top>
					<right>51</right>
					<width>400</width>
					<height>20</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>font30</font>
					<label>[COLOR button_focus]$LOCALIZE[31134]:  [/COLOR]$INFO[Player.TimeRemaining]</label>
				</control>
				<control type="label">
					<left>40</left>
					<top>145</top>
					<width>350</width>
					<height>20</height>
					<font>font30</font>
					<aligny>center</aligny>
					<label>$VAR[SeekTimeLabelVar]</label>
				</control>
			</control>
			<control type="progress">
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<left>0</left>
				<top>70</top>
				<width>1920</width>
				<height>15</height>
				<info>Player.ProgressCache</info>
				<texturebg border="3" colordiffuse="60FFFFFF">colors/white50.png</texturebg>
				<midtexture colordiffuse="button_focus">colors/white50.png</midtexture>
			</control>
			<control type="progress">
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<left>0</left>
				<top>70</top>
				<width>1920</width>
				<height>15</height>
				<info>Player.Progress</info>
				<texturebg border="3" colordiffuse="60FFFFFF">colors/white50.png</texturebg>
				<midtexture colordiffuse="button_focus">colors/white50.png</midtexture>
			</control>
			<control type="slider" id="401">
				<left>0</left>
				<top>65</top>
				<width>1920</width>
				<height>25</height>
				<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_bar.png</texturesliderbar>
				<textureslidernib colordiffuse="button_focus">osd/progress/nub_bar.png</textureslidernib>
				<textureslidernibfocus colordiffuse="button_focus">colors/white.png</textureslidernibfocus>
			</control>
		</control>
	</controls>
</window>
