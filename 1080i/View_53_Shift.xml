<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_53_Shift">
        <control type="group">
            <description>Poster Viewtype</description>
            <height>424</height>
            <left>0</left>
            <top>180</top>
            <include name="LeftRightArrows">
                <param name="list_id" value="53" />
                <param name="left_posx" value="45" />
                <param name="right_posx" value="1849" />
                <param name="posy" value="170" />
            </include>
            <control type="scrollbar" id="5399">
                <left>110</left>
                <top>710</top>
                <width>1700</width>
                <height>10</height>
                <texturesliderbackground colordiffuse="00FFFFFF">colors/white.png</texturesliderbackground>
                <texturesliderbar colordiffuse="AAFFFFFF">colors/white.png</texturesliderbar>
                <texturesliderbarfocus colordiffuse="button_focus">colors/white.png</texturesliderbarfocus>
                <animation effect="zoom" start="100,100" end="100,150" time="250" center="110,710" tween="cubic" easing="inout" reversible="true">Focus</animation>
                <animation effect="zoom" start="100,150" end="100,100" time="125" center="110,710" tween="cubic" easing="inout" reversible="true">UnFocus</animation>
                <textureslidernib>-</textureslidernib>
                <textureslidernibfocus>-</textureslidernibfocus>
                <onleft>5399</onleft>
                <onright>5399</onright>
                <onup>53</onup>
                <ondown>53</ondown>
                <orientation>horizontal</orientation>
                <visible>Control.IsVisible(53)</visible>
                <animation effect="fade" start="100" end="0" time="200">VisibleChange</animation>
                <animation effect="fade" start="0" end="100" delay="300" time="320">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
            </control>
            <control type="group">
                <visible>Control.IsVisible(53)</visible>
                <include>Visible_Right</include>
                <include>OpenClose_Right</include>
                <control type="image">
                    <left>90</left>
                    <top>415</top>
                    <width>1740</width>
                    <height>110</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="22">dialogs/dialog-bg.png</texture>
                </control>
                <control type="image">
                    <left>800</left>
                    <top>435</top>
                    <width>320</width>
                    <height>70</height>
                    <aspectratio>stretch</aspectratio>
                    <visible>Control.HasFocus(53)</visible>
                    <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                    <texture colordiffuse="button_focus">colors/white.png</texture>
                    <animation effect="slide" start="0,0" end="-344,0" time="300" tween="sine" condition="Stringcompare(Container.Position,1) | Stringcompare(Container.Position,0)">Conditional</animation>
                    <animation effect="slide" start="0,0" end="-344,0" time="300" tween="sine" condition="Stringcompare(Container.Position,0)">Conditional</animation>
                    <animation effect="slide" start="0,0" end="344,0" time="300" tween="sine" condition="Stringcompare(Container.Position,3) | Stringcompare(Container.Position,4)">Conditional</animation>
                    <animation effect="slide" start="0,0" end="344,0" time="300" tween="sine" condition="Stringcompare(Container.Position,4)">Conditional</animation>
                </control>
                <control type="fixedlist" id="53">
                    <left>110</left>
                    <top>0</top>
                    <width>1700</width>
                    <height>704</height>
                    <focusposition>2</focusposition>
                    <movement>2</movement>
                    <pagecontrol>5399</pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <orientation>horizontal</orientation>
                    <visible>$PARAM[visible]</visible>
                    <include>Visible_Right</include>
                    <onleft>53</onleft>
                    <onup>9000</onup>
                    <ondown>5399</ondown>
                    <onright>53</onright>
                    <preloaditems>1</preloaditems>
                    <viewtype label="Shift">icon</viewtype>
                    <itemlayout width="340">
                        <control type="group">
                            <control type="image">
                                <left>0</left>
                                <top>3</top>
                                <width>340</width>
                                <height>424</height>
                                <aspectratio aligny="bottom">keep</aspectratio>
                                <texture fallback="DefaultVideo.png">$INFO[ListItem.Thumb]</texture>
                                <bordertexture border="20">overlays/shadow.png</bordertexture>
                                <bordersize>20</bordersize>
                            </control>
                            <control type="label">
                                <left>20</left>
                                <top>445</top>
                                <width>300</width>
                                <height>424</height>
                                <align>center</align>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="340">
                        <control type="image">
                            <left>0</left>
                            <top>3</top>
                            <width>340</width>
                            <height>424</height>
                            <aspectratio aligny="bottom">keep</aspectratio>
                            <texture fallback="DefaultVideo.png">$INFO[ListItem.Thumb]</texture>
                            <bordertexture border="20">overlays/shadow.png</bordertexture>
                            <bordersize>20</bordersize>
                        </control>
                        <control type="label">
                            <left>20</left>
                            <top>445</top>
                            <width>300</width>
                            <height>424</height>
                            <align>center</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                </control>
                <control type="image">
                    <left>90</left>
                    <top>495</top>
                    <width>880</width>
                    <height>232</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="22">dialogs/dialog-bg.png</texture>
                </control>
                <control type="textbox">
                    <left>130</left>
                    <top>530</top>
                    <width>680</width>
                    <height>160</height>
                    <label>$INFO[ListItem.Genre,[COLOR button_focus]Genre:  [/COLOR],[CR]]$INFO[ListItem.Director,[COLOR button_focus]Director:  [/COLOR],[CR]]$INFO[ListItem.Writer,[COLOR button_focus]Writer:  [/COLOR],[CR]]$INFO[ListItem.Duration,[COLOR button_focus]Duration:  [/COLOR],[CR]]</label>
                    <font>font_textbox</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <align>justify</align>
                </control>
                <control type="image">
                    <right>90</right>
                    <top>495</top>
                    <width>880</width>
                    <height>232</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="22">dialogs/dialog-bg.png</texture>
                </control>
                <control type="textbox">
                    <left>1000</left>
                    <top>530</top>
                    <width>790</width>
                    <height>160</height>
                    <label>$INFO[ListItem.Plot]</label>
                    <font>font_textbox</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <align>justify</align>
                </control>
                    <control type="grouplist">
                        <orientation>vertical</orientation>
                        <top>523</top>
                        <itemgap>-8</itemgap>
                        <left>830</left>
                        <include name="MediaFlag">
                            <param name="texture" value="$INFO[ListItem.VideoResolution,flags/videoresolution/,.png]" />
                        </include>
                        <include name="MediaFlag">
                            <param name="texture" value="$INFO[ListItem.VideoAspect,flags/aspectratio/,.png]" />
                        </include>
                        <include name="MediaFlag">
                            <param name="texture" value="$INFO[ListItem.AudioCodec,flags/audiocodec/,.png]" />
                        </include>
                        <include name="MediaFlag">
                            <param name="texture" value="$INFO[ListItem.AudioChannels,flags/audiochannel/,.png]" />
                        </include>
                    </control>
            </control>
        </control>
    </include>
</includes>
