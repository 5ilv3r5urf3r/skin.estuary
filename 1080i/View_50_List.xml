<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_50_List">
        <control type="group">
            <description>List Viewtype</description>
            <visible>Control.IsVisible(50)</visible>
            <control type="image">
                <left>110</left>
                <posy>200</posy>
                <width>469</width>
                <height>704</height>
                <include>OpenClose_FadeSlide_Left</include>
                <aspectratio aligny="bottom">keep</aspectratio>
                <fadetime>300</fadetime>
                <bordertexture>colors/black.png</bordertexture>
                <bordersize>4</bordersize>
                <texture border="4" background="true" fallback="DefaultMovie.png">$INFO[ListItem.Art(poster)]</texture>
            </control>
            <control type="group">
                <include>OpenClose_FadeSlide_Right</include>
                <control type="image">
                    <right>110</right>
                    <posy>200</posy>
                    <width>469</width>
                    <height>704</height>
                    <aspectratio>stretch</aspectratio>
                    <texture colordiffuse="B0FFFFFF">colors/black.png</texture>
                </control>
                <control type="textbox">
                    <right>130</right>
                    <posy>210</posy>
                    <width>429</width>
                    <height>410</height>
                    <align>justify</align>
                    <font>font12</font>
                    <autoscroll time="3000" delay="7000" repeat="5000">true</autoscroll>
                    <label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
                </control>
                <control type="image">
                    <right>110</right>
                    <posy>200</posy>
                    <width>469</width>
                    <height>704</height>
                    <aspectratio aligny="bottom">keep</aspectratio>
                    <fadetime>300</fadetime>
                    <bordertexture>colors/black.png</bordertexture>
                    <bordersize>4</bordersize>
                    <texture border="4" background="true" fallback="DefaultFanart.png">$INFO[ListItem.Art(fanart)]</texture>
                </control>
            </control>
            <control type="group">
                <include>OpenClose_FadeSlide_Right</include>
                <posx>600</posx>
                <posy>200</posy>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>714</width>
                    <height>704</height>
                    <texture border="2">dialogs/dialog-bg.png</texture>
                </control>
                <control type="list" id="50">
                    <posx>2</posx>
                    <posy>2</posy>
                    <width>710</width>
                    <height>700</height>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <orientation>vertical</orientation>
                    <onleft>9000</onleft>
                    <onright>50</onright>
                    <onup>SetFocus(9000)</onup>
                    <onback>SetFocus(50)</onback>
                    <viewtype label="List">list</viewtype>
                    <preloaditems>1</preloaditems>
                    <focusedlayout height="70">
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>996</width>
                            <height>71</height>
                            <texture border="90,3,90,3">lists/separator.png</texture>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>996</width>
                            <height>69</height>
                            <texture border="150,1,150,1">lists/focus.png</texture>
                            <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(50)">Conditional</animation>
                        </control>
                        <control type="label">
                            <posx>70</posx>
                            <posy>0</posy>
                            <height>70</height>
                            <width>560</width>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>font14</font>
                            <label>$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="label">
                            <posx>695</posx>
                            <posy>0</posy>
                            <height>70</height>
                            <width>605</width>
                            <align>right</align>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <label>$INFO[ListItem.Label2]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>grey</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>-4</posy>
                            <width>70</width>
                            <height>70</height>
                            <texture>lists/arrow-right-nofo.png</texture>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>-4</posy>
                            <width>70</width>
                            <height>70</height>
                            <texture>lists/arrow-right-fo.png</texture>
                            <animation effect="fade" start="0" end="100" time="300" delay="0" reversible="false">Focus</animation>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>-4</posy>
                            <width>70</width>
                            <height>70</height>
                            <texture>lists/arrow-right-colour-fo.png</texture>
                            <animation effect="fade" start="0" end="100" time="300" delay="0" reversible="false">Focus</animation>
                            <visible>!Control.HasFocus(50)</visible>
                        </control>
                    </focusedlayout>
                    <itemlayout height="70">
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>996</width>
                            <height>71</height>
                            <texture border="90,3,90,3">lists/separator.png</texture>
                        </control>
                        <control type="label">
                            <posx>70</posx>
                            <posy>0</posy>
                            <height>70</height>
                            <width>560</width>
                            <aligny>center</aligny>
                            <font>font14</font>
                            <label>$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                            <scroll>false</scroll>
                        </control>
                        <control type="label">
                            <posx>695</posx>
                            <posy>0</posy>
                            <height>70</height>
                            <width>605</width>
                            <align>right</align>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <label>$INFO[ListItem.Label2]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>grey</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>-4</posy>
                            <width>70</width>
                            <height>70</height>
                            <texture>lists/arrow-right-nofo.png</texture>
                        </control>
                    </itemlayout>
                </control>
            </control>
        </control>
    </include>
</includes>
