<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_51_Poster">
        <control type="group">
            <description>Poster Viewtype</description>
            <height>424</height>
            <left>0</left>
            <top>180</top>
            <control type="button" id="20000">
                <description>Dummy button to get animations right (hide focusedlayout on animations)</description>
                <include>HiddenObject</include>
                <animation effect="fade" delay="500" time="0" start="100" end="0">Visible</animation>
                <animation effect="fade" delay="500" time="0" start="100" end="0">WindowOpen</animation>
                <onclick>noop</onclick>
                <visible>Control.IsVisible(51)</visible>
            </control>
            <control type="image">
                <left>50</left>
                <top>170</top>
                <width>28</width>
                <height>28</height>
                <texture flipx="true" colordiffuse="button_focus">overlays/arrowright.png</texture>
                <animation effect="slide" start="30,0" end="0,0" time="200">VisibleChange</animation>
                <animation effect="slide" start="150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                <animation effect="slide" start="0" end="-150" time="300" tween="cubic">WindowClose</animation>
                <visible>Container(51).HasPrevious + Control.HasFocus(51)</visible>
            </control>
            <control type="image">
                <left>1850</left>
                <top>170</top>
                <width>28</width>
                <height>28</height>
                <texture colordiffuse="button_focus">overlays/arrowright.png</texture>
                <animation effect="slide" start="30,0" end="0,0" time="200">VisibleChange</animation>
                <animation effect="slide" start="-150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                <animation effect="slide" start="0" end="150" time="300" tween="cubic">WindowClose</animation>
                <visible>Container(51).HasNext + Control.HasFocus(51)</visible>
            </control>
            <control type="scrollbar" id="5199">
                <left>110</left>
                <top>710</top>
                <width>1700</width>
                <height>10</height>
                <texturesliderbackground colordiffuse="00FFFFFF">colors/white.png</texturesliderbackground>
                <texturesliderbar colordiffuse="AAFFFFFF">colors/white.png</texturesliderbar>
                <texturesliderbarfocus colordiffuse="button_focus">colors/white.png</texturesliderbarfocus>
                <animation effect="zoom" start="100,100" end="100,150" time="250" center="110,710" tween="cubic" easing="inout" reversible="true">Focus</animation>
                <animation effect="zoom" start="100,150" end="100,100" time="125" center="110,710" tween="cubic" easing="inout" reversible="true">UnFocus</animation>
                <textureslidernib>-</textureslidernib>
                <textureslidernibfocus>-</textureslidernibfocus>
                <onleft>5199</onleft>
                <onright>5199</onright>
                <onup>51</onup>
                <ondown>51</ondown>
                <orientation>horizontal</orientation>
                <visible>Control.IsVisible(51)</visible>
                <animation effect="fade" start="100" end="0" time="200">VisibleChange</animation>
                <animation effect="fade" start="0" end="100" delay="300" time="320">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
            </control>
            <control type="group">
                <visible>Control.IsVisible(51)</visible>
                <include>Vis_FadeSlide_Right</include>
                <include>OpenClose_FadeSlide_Right</include>
                <control type="fixedlist" id="51">
                    <left>340</left>
                    <top>0</top>
                    <width>1466</width>
                    <height>704</height>
                    <focusposition>0</focusposition>
                    <movement>0</movement>
                    <pagecontrol>5199</pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <orientation>horizontal</orientation>
                    <onleft>51</onleft>
                    <onup>9000</onup>
                    <ondown>5199</ondown>
                    <onright>51</onright>
                    <hitrect x="0" y="0" w="800" h="400" />
                    <visible>Container.Content(movies) | Container.Content(seasons) | Container.Content(sets) | Container.Content(tvshows)</visible>
                    <preloaditems>1</preloaditems>
                    <viewtype label="Poster">icon</viewtype>
                    <itemlayout width="317">
                        <control type="group">
                            <control type="image">
                                <left>0</left>
                                <top>3</top>
                                <width>236</width>
                                <height>354</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="2" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                                <bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
                                <bordersize>4</bordersize>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="279">
                        <control type="group">
                            <animation effect="fade" time="300" start="100" end="0">Focus</animation>
                            <visible>Control.IsVisible(20000)</visible>
                            <control type="image">
                                <left>0</left>
                                <top>3</top>
                                <width>236</width>
                                <height>354</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="2" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                                <bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
                                <bordersize>4</bordersize>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="image">
                    <right>90</right>
                    <top>375</top>
                    <width>1232</width>
                    <height>110</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="22">dialogs/dialog-bg.png</texture>
                </control>
                <control type="image">
                    <right>90</right>
                    <top>455</top>
                    <width>1232</width>
                    <height>272</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="22">dialogs/dialog-bg.png</texture>
                </control>
                <control type="list" id="5000">
                    <right>130</right>
                    <top>475</top>
                    <width>1152</width>
                    <height>235</height>
                    <orientation>vertical</orientation>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <viewtype label="List">list</viewtype>
                    <preloaditems>1</preloaditems>
                    <visible>Stringcompare(Listitem.dbtype,set)</visible>
                    <focusedlayout height="40">
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <height>50</height>
                            <width>1152</width>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>font13</font>
                            <label>$INFO[ListItem.Year,[COLOR button_focus],[/COLOR]  -  ]$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                    </focusedlayout>
                    <itemlayout height="40">
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <height>50</height>
                            <width>1152</width>
                            <aligny>center</aligny>
                            <font>font13</font>
                            <label>$INFO[ListItem.Year,[COLOR button_focus],[/COLOR]  -  ]$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                            <scroll>false</scroll>
                        </control>
                    </itemlayout>
                    <content>$INFO[ListItem.Path]</content>
                </control>
                <control type="image">
                    <left>645</left>
                    <top>415</top>
                    <width>32</width>
                    <height>32</height>
                    <texture>$VAR[ListWatchedIcon]</texture>
                </control>
                <control type="label">
                    <left>695</left>
                    <top>400</top>
                    <width>1160</width>
                    <height>40</height>
                    <label>$INFO[ListItem.Label]</label>
                    <font>font30_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <scroll>false</scroll>
                    <align>left</align>
                </control>
                <control type="label">
                    <right>135</right>
                    <top>400</top>
                    <width>1160</width>
                    <height>40</height>
                    <label>$INFO[ListItem.Year]</label>
                    <font>font30_title</font>
                    <textcolor>button_focus</textcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <scroll>false</scroll>
                    <align>right</align>
                </control>
                <control type="grouplist">
                    <orientation>vertical</orientation>
                    <left>645</left>
                    <top>480</top>
                    <height>200</height>
                    <control type="label">
                        <width>1160</width>
                        <height>40</height>
                        <label>$INFO[ListItem.Genre,[COLOR button_focus]$LOCALIZE[515]: [/COLOR]]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <scroll>false</scroll>
                        <align>left</align>
                        <visible>!IsEmpty(ListItem.Genre)</visible>
                    </control>
                    <control type="label">>
                        <width>1160</width>
                        <height>40</height>
                        <label>$INFO[ListItem.Director,[COLOR button_focus]$LOCALIZE[20339]: [/COLOR]]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <scroll>false</scroll>
                        <align>left</align>
                        <visible>!IsEmpty(ListItem.Director)</visible>
                    </control>
                    <control type="label">>
                        <width>1160</width>
                        <height>40</height>
                        <label>$INFO[ListItem.Season,[COLOR button_focus]Seasons: [/COLOR],]$INFO[ListItem.Episode,  •  [COLOR button_focus] Episodes: [/COLOR],]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <scroll>false</scroll>
                        <align>left</align>
                        <visible>!IsEmpty(ListItem.Season)</visible>
                    </control>
                    <control type="textbox">
                        <width>1150</width>
                        <height max="200">auto</height>
                        <autoscroll time="3000" delay="3000" repeat="5000">true</autoscroll>
                        <label>$INFO[ListItem.Plot]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <align>left</align>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>
