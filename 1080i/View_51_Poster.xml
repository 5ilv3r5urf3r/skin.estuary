<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_51_Poster">
        <control type="group">
            <description>Poster Viewtype</description>
            <height>424</height>
            <posx>0</posx>
            <posy>200</posy>
            <visible>Control.IsVisible(51)</visible>
            <control type="image">
                <posx>50</posx>
                <posy>221</posy>
                <width>28</width>
                <height>28</height>
                <texture flipx="true">overlays/arrowright.png</texture>
                <animation effect="slide" start="30,0" end="0,0" time="200">VisibleChange</animation>
                <animation effect="slide" start="-150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                <visible>Container(51).HasPrevious + Control.HasFocus(51)</visible>
            </control>
            <control type="label">
                <posx>150</posx>
                <posy>0</posy>
                <width>600</width>
                <height>40</height>
                <label>Sorted by: Title</label>
                <font>font14</font>
                <textcolor>white</textcolor>
                <shadowcolor>text_shadow</shadowcolor>
                <scroll>false</scroll>
                <align>left</align>
            </control>
            <control type="fixedlist" id="51">
                <posx>340</posx>
                <posy>0</posy>
                <width>1660</width>
                <height>704</height>
                <focusposition>0</focusposition>
                <movement>0</movement>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <onleft>9000</onleft>
                <onup>9000</onup>
                <onright>50</onright>
                <onback>SetFocus(9000)</onback>
                <preloaditems>1</preloaditems>
                <viewtype label="Poster">icon</viewtype>
                <animation type="WindowOpen">
                    <effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
                    <effect type="zoom" start="120" end="100" time="400" tween="cubic" easing="out" />
                </animation>
                <animation type="WindowClose">
                    <effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
                    <effect type="zoom" start="100" end="120" time="300" tween="cubic" easing="out" />
                </animation>
                <itemlayout width="317">
                    <control type="group">
                        <control type="image">
                            <posx>0</posx>
                            <posy>3</posy>
                            <width>236</width>
                            <height>354</height>
                            <aspectratio>stretch</aspectratio>
                            <texture border="2" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                            <bordertexture>colors/black.png</bordertexture>
                            <bordersize>4</bordersize>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="279">
                    <control type="group">
                        <control type="image">
                            <posx>0</posx>
                            <posy>3</posy>
                            <width>236</width>
                            <height>354</height>
                            <aspectratio>stretch</aspectratio>
                            <texture border="2" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                            <bordertexture>colors/black.png</bordertexture>
                            <bordersize>4</bordersize>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="image">
                <right>110</right>
                <posy>395</posy>
                <width>1192</width>
                <height>315</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="B0FFFFFF">colors/black.png</texture>
            </control>
            <control type="label">
                <left>645</left>
                <posy>405</posy>
                <width>1160</width>
                <height>40</height>
                <label>$INFO[ListItem.Title]</label>
                <font>font30_title</font>
                <textcolor>white</textcolor>
                <shadowcolor>text_shadow</shadowcolor>
                <scroll>false</scroll>
                <align>left</align>
            </control>
            <control type="image">
                <posx>110</posx>
                <posy>3</posy>
                <width>469</width>
                <height>704</height>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture border="2" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                <bordertexture>colors/black.png</bordertexture>
                <bordersize>4</bordersize>
            </control>
        </control>
    </include>
</includes>
