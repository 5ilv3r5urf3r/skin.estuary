                    <font>font12</font>
                    <textoffsety>130</textoffsety>
                    <texturefocus border="40">buttons/button-theme-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/button-nofo.png</texturenofocus>
                    <radioposx>70</radioposx>
                    <radioposy>50</radioposy>
                    <radiowidth>60</radiowidth>
                    <radioheight>60</radioheight>
                    <textureradioonfocus>icons/favourites.png</textureradioonfocus>
                    <textureradioonnofocus>icons/favourites.png</textureradioonnofocus>
                    <textureradioofffocus>icons/favourites.png</textureradioofffocus>
                    <textureradiooffnofocus>icons/favourites.png</textureradiooffnofocus>
                </control>
                <control type="radiobutton" id="22">
                    <width>200</width>
                    <height>199</height>
                    <align>center</align>
