                <top>162</top>
                <onup>700</onup>
                <ondown>700</ondown>
                <onleft>50</onleft>
                <onright>50</onright>
                <control type="radiobutton" id="20">
                    <width>200</width>
                    <height>199</height>
                    <align>center</align>
                    <aligny>top</aligny>
                    <font>font12</font>
                    <textoffsety>130</textoffsety>
                    <label>$LOCALIZE[191]$INFO[Playlist.Random, : ]</label>
