                    <texturenofocus border="40">buttons/button-nofo.png</texturenofocus>
                    <radioposx>70</radioposx>
                    <radioposy>34</radioposy>
                    <radiowidth>60</radiowidth>
                    <radioheight>60</radioheight>
                    <textureradioonfocus>icons/search.png</textureradioonfocus>
                    <textureradioonnofocus>icons/search.png</textureradioonnofocus>
                    <textureradioofffocus>icons/search.png</textureradioofffocus>
                    <textureradiooffnofocus>icons/search.png</textureradiooffnofocus>
                </control>
                <control type="radiobutton" id="26">
                    <width>200</width>
                    <height>199</height>
                    <align>center</align>
                    <aligny>top</aligny>
                    <font>font12</font>
                    <textoffsety>130</textoffsety>
                    <texturefocus border="40">buttons/button-theme-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/button-nofo.png</texturenofocus>
                    <radioposx>70</radioposx>
                    <radioposy>50</radioposy>
                    <radiowidth>60</radiowidth>
                    <radioheight>60</radioheight>
                    <textureradioonfocus>icons/settings.png</textureradioonfocus>
                    <textureradioonnofocus>icons/settings.png</textureradioonnofocus>
                    <textureradioofffocus>icons/settings.png</textureradioofffocus>
