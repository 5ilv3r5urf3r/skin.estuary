                <include>Vis_FadeSlide_Right</include>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>1014</width>
                    <height>706</height>
                    <texture border="2">dialogs/dialog-bg.png</texture>
                </control>
                <control type="list" id="50">
                    <left>2</left>
                    <top>3</top>
                    <width>1010</width>
                    <height>700</height>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <orientation>vertical</orientation>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <viewtype label="List">list</viewtype>
                    <preloaditems>1</preloaditems>
                    <focusedlayout height="70">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>996</width>
                            <height>71</height>
                            <texture border="90,3,90,3">lists/separator.png</texture>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>996</width>
                            <height>69</height>
                            <texture border="150,1,150,1">lists/focus.png</texture>
                            <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(50)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>70</left>
                            <top>0</top>
                            <height>70</height>
                            <width>560</width>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>font14</font>
                            <label>$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="label">
                            <left>90</left>
                            <top>0</top>
                            <height>70</height>
                            <width>605</width>
                            <align>right</align>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <label>$INFO[ListItem.Label2]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>grey</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="image">
                            <left>19</left>
                            <top>20</top>
                            <width>32</width>
                            <height>32</height>
                            <texture colordiffuse="grey">$INFO[ListItem.TrackNumber]</texture>
                        </control>
                        <control type="image">
                            <left>19</left>
                            <top>20</top>
                            <width>32</width>
                            <height>32</height>
                            <texture>$INFO[ListItem.TrackNumber]</texture>
                            <animation effect="fade" start="0" end="100" time="300" delay="0" reversible="false">Focus</animation>
                        </control>
                        <control type="image">
                            <left>19</left>
                            <top>20</top>
                            <width>32</width>
                            <height>32</height>
                            <texture colordiffuse="button_focus">$INFO[ListItem.TrackNumber]</texture>
                            <animation effect="fade" start="0" end="100" time="300" delay="0" reversible="false">Focus</animation>
                            <visible>!Control.HasFocus(50)</visible>
                        </control>
                    </focusedlayout>
                    <itemlayout height="70">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>996</width>
                            <height>71</height>
                            <texture border="90,3,90,3">lists/separator.png</texture>
                        </control>
                        <control type="label">
                            <left>70</left>
                            <top>0</top>
                            <height>70</height>
                            <width>560</width>
                            <aligny>center</aligny>
                            <font>font14</font>
                            <label>$INFO[ListItem.Label]</label>
                            <selectedcolor>selected</selectedcolor>
                            <textcolor>white</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                            <scroll>false</scroll>
                        </control>
                        <control type="label">
                            <left>90</left>
                            <top>0</top>
                            <height>70</height>
                            <width>605</width>
                            <align>right</align>
                            <aligny>center</aligny>
                            <font>font12</font>
