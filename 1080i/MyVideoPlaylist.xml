                            <selectedcolor>selected</selectedcolor>
                            <textcolor>grey</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <control type="image">
                            <left>19</left>
                            <top>20</top>
                            <width>32</width>
                            <height>32</height>
                            <texture colordiffuse="grey">$INFO[ListItem.TrackNumber]</texture>
                        </control>
                    </itemlayout>
                </control>
                </control>

        <include>Media_Menu</include>
        <include name="TopBar">
            <param name="breadcrumbs_label" value="Video Playlist" />
            <param name="breadcrumbs_icon" value="icons/settings/video.png" />
        </include>
        <include>BottomBar</include>
    </controls>
