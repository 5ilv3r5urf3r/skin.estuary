<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<views>50,53</views>
	<menucontrol>9000</menucontrol>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="Window.IsActive(addoninformation) | Window.IsActive(musicinformation)">Conditional</animation>
			<include name="View_50_List">
				<param name="visible" value="true" />
			</include>
			<include name="View_53_Shift">
				<param name="visible" value="true" />
			</include>
		</control>
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9000">
				<top>110</top>
				<include>MediaMenuListCommon</include>
				<control type="label" id="203">
					<description>Actions</description>
					<include>MediaMenuLabelCommon</include>
					<label>31039</label>
				</control>
				<control type="radiobutton" id="99">
					<description>Library button</description>
					<label>$LOCALIZE[29800]</label>
					<onclick>ReplaceWindow(MusicLibrary)</onclick>
					<selected>Window.IsVisible(MusicLibrary)</selected>
					<include>MediaMenuItemsCommon</include>
					<enable>Library.HasContent(Music)</enable>
				</control>
				<control type="button" id="612">
					<description>Go to playlist</description>
					<include>MediaMenuItemsCommon</include>
					<label>13350</label>
					<onclick>ActivateWindow(musicplaylist)</onclick>
					<visible>!StringCompare(Playlist.Length(music),0)</visible>
				</control>
			</control>
		</control>
		<include name="TopBar">
			<param name="breadcrumbs_label" value="$LOCALIZE[31022]" />
			<param name="breadcrumbs_icon" value="icons/settings/music.png" />
		</include>
		<include>BottomBar</include>
	</controls>
</window>
