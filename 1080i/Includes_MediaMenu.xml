<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="MediaMenuItemsCommon">
        <width>400</width>
        <textoffsetx>20</textoffsetx>
        <top>0</top>
        <height>75</height>
        <radioposx>300</radioposx>
        <aligny>center</aligny>
        <textcolor>white</textcolor>
        <focusedcolor>white</focusedcolor>
        <invalidcolor>invalid</invalidcolor>
        <texturefocus border="150,1,150,1">lists/focus.png</texturefocus>
        <texturenofocus border="40">lists/separator.png</texturenofocus>
        <alttexturefocus border="150,1,150,1">lists/focus.png</alttexturefocus>
        <alttexturenofocus border="40">lists/separator.png</alttexturenofocus>
    </include>
    <include name="MediaMenuLabelCommon">
        <width>400</width>
        <textoffsetx>20</textoffsetx>
        <textoffsety>15</textoffsety>
        <top>0</top>
        <height>50</height>
        <radioposx>300</radioposx>
        <font>font12_title</font>
        <align>left</align>
        <aligny>top</aligny>
        <textcolor>button_focus</textcolor>
    </include>
    <include name="MediaMenuCommon">
        <include>OpenClose_Left</include>
        <animation type="Conditional" condition="ControlGroup(9000).HasFocus | Control.HasFocus(6130)">
            <effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
            <effect type="slide" start="-320" end="0" time="400" tween="cubic" easing="out" />
        </animation>
        <animation type="Conditional" condition="!ControlGroup(9000).HasFocus + !Control.HasFocus(6130)">
            <effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
            <effect type="slide" start="0" end="-320" time="300" tween="cubic" easing="out" />
        </animation>
        <control type="image">
            <description>Menu Panel</description>
            <left>0</left>
            <top>80</top>
            <width>400</width>
            <height>920</height>
            <texture>lists/panel.png</texture>
        </control>
    </include>
    <include name="MediaMenuListCommon">
        <left>0</left>
        <top>100</top>
        <width>400</width>
        <height>1080</height>
        <onleft>9000</onleft>
        <onup>9000</onup>
        <onright>50</onright>
        <ondown>9000</ondown>
        <onback>50</onback>
        <control type="label" id="200">
            <include>MediaMenuLabelCommon</include>
            <label>31006</label>
        </control>
        <control type="button" id="6051">
            <description>Viewtype Toggle</description>
            <include>MediaMenuItemsCommon</include>
            <label>Viewtype</label>
            <label2>[COLOR button_focus]$INFO[Container.Viewmode][/COLOR]</label2>
            <onclick>Container.NextViewMode</onclick>
        </control>
        <control type="button" id="3">
            <description>Sort by button</description>
            <include>MediaMenuItemsCommon</include>
            <label>103</label>
        </control>
        <control type="togglebutton" id="4">
            <description>Sort asc</description>
            <include>MediaMenuItemsCommon</include>
            <label>31051</label>
            <altlabel>31050</altlabel>
            <usealttexture>Container.SortDirection(Ascending)</usealttexture>
        </control>
    </include>
    <include name="PlaylistEditorButtons">
        <control type="button" id="6">
            <label>Open playlist</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="7">
            <label>Save playlist</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="8">
            <label>Close playlist</label>
            <include>MediaMenuItemsCommon</include>
        </control>
    </include>
    <include name="PlaylistButtons">
        <control type="button" id="20">
            <label>$LOCALIZE[191]$INFO[Playlist.Random, : ]</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="26">
            <label>-</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="21">
            <label>190</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="22">
            <label>192</label>
            <include>MediaMenuItemsCommon</include>
        </control>
    </include>
    <include name="MusicLibraryButtons">
        <control type="edit" id="8">
            <label>137</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="16">
            <label>589</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="100">
            <label>Music files</label>
            <include>MediaMenuItemsCommon</include>
            <onclick>ReplaceWindow(MusicFiles)</onclick>
        </control>
        <control type="button" id="20">
            <description>Update library</description>
            <include>MediaMenuItemsCommon</include>
            <label>$VAR[LibraryScanLabelVar]</label>
        </control>
    </include>
    <include name="PicturesButtons">
        <control type="button" id="6">
            <label>13317</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="7">
            <label>13318</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="9">
            <label>13319</label>
            <include>MediaMenuItemsCommon</include>
        </control>
        <control type="button" id="1688">
            <label>Show Images on Map</label>
            <onclick>RunScript(script.maps.browser,folder=$INFO[Container.FolderPath])</onclick>
            <include>MediaMenuItemsCommon</include>
        </control>
    </include>
    <include name="Media_Menu">
        <control type="group">
            <include>OpenClose_Left</include>
            <animation type="Conditional" condition="ControlGroup(9000).HasFocus | Control.HasFocus(6130)">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
                <effect type="slide" start="-320" end="0" time="400" tween="cubic" easing="out" />
            </animation>
            <animation type="Conditional" condition="!ControlGroup(9000).HasFocus + !Control.HasFocus(6130)">
                <effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
                <effect type="slide" start="0" end="-320" time="300" tween="cubic" easing="out" />
            </animation>
            <control type="image">
                <description>Menu Panel</description>
                <left>0</left>
                <top>80</top>
                <width>400</width>
                <height>920</height>
                <texture>lists/panel.png</texture>
            </control>
            <control type="grouplist" id="9000">
                <top>100</top>
                <width>1920</width>
                <height>800</height>
                <align>left</align>
                <aligny>top</aligny>
                <orientation>vertical</orientation>
                <scroll>true</scroll>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onback>50</onback>
                <control type="button" id="601">
                    <label>[B]$INFO[Container.Viewmode][/B]</label>
                    <include>MediaMenuItemsCommon</include>
                    <onclick>Container.NextViewMode</onclick>
                    <visible>!Window.IsActive(musicplaylisteditor)</visible>
                </control>
                <control type="button" id="3">
                    <description>Sort Button</description>
                    <include>MediaMenuItemsCommon</include>
                    <visible>Control.IsEnabled(3)</visible>
                </control>
                <control type="togglebutton" id="4">
                    <label>Order: $LOCALIZE[584]</label>
                    <altlabel>Order: $LOCALIZE[585]</altlabel>
                    <include>MediaMenuItemsCommon</include>
                    <visible>Control.IsEnabled(4)</visible>
                </control>
                <control type="edit" id="19">
                    <label>$LOCALIZE[137]...</label>
                    <!-- <visible>Container.CanFilter + !Container.CanFilterAdvanced</visible> -->
                    <visible>!Container.Content()</visible>
                    <include>MediaMenuItemsCommon</include>
                    <visible>!Window.IsActive(musiclibrary)</visible>
                </control>
                <control type="button" id="98">
                    <label>587</label>
                    <visible>Container.CanFilterAdvanced</visible>
                    <onclick>SetFocus(50)</onclick>
                    <onclick>Filter</onclick>
                    <include>MediaMenuItemsCommon</include>
                    <visible>!Container.Content()</visible>
                </control>
                <include condition="Window.IsActive(MusicLibrary)">MusicLibraryButtons</include>
                <include condition="Window.IsActive(musicplaylist) | Window.IsActive(videoplaylist)">PlaylistButtons</include>
                <include condition="Window.IsActive(pictures)">PicturesButtons</include>
                <include condition="Window.IsActive(musicplaylisteditor)">PlaylistEditorButtons</include>
                <control type="button" id="612">
                    <label>13350</label>
                    <include>MediaMenuItemsCommon</include>
                    <onclick condition="IntegerGreaterThan(Playlist.Length(music),1)">ActivateWindow(musicplaylist)</onclick>
                    <onclick condition="IntegerGreaterThan(Playlist.Length(video),1)">ActivateWindow(videoplaylist)</onclick>
                    <visible>IntegerGreaterThan(Playlist.Length(music),1) | IntegerGreaterThan(Playlist.Length(video),1)</visible>
                    <visible>!Window.IsActive(MusicPlaylist) + !Window.IsActive(VideoPlaylist)</visible>
                </control>
                <control type="button" id="613">
                    <label>FullScreen Media</label>
                    <include>MediaMenuItemsCommon</include>
                    <onclick>FullScreen</onclick>
                    <visible>Player.HasMedia</visible>
                </control>
            </control>
        </control>
        <control type="button" id="6130">
            <label>Button for media menu mouse support</label>
            <height>1080</height>
            <width>50</width>
            <posx>-50</posx>
            <posy>0</posy>
            <texturefocus>-</texturefocus>
            <texturenofocus>-</texturenofocus>
        </control>
    </include>
</includes>
