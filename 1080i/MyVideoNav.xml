<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <backgroundcolor>0</backgroundcolor>
    <views>50,51,52,53,500,501</views>
    <controls>
        <include>DefaultBackground</include>
        <include>View_50_List</include>
        <include>View_51_Poster</include>
        <include name="View_52_IconWall">
            <param name="visible" value="Container.Content() | Container.Content(tags) | Container.Content(years) | Container.Content(files) | Container.Content(genres) | Container.Content(countries) | Container.Content(studios)" />
        </include>
        <include name="View_500_SmallThumb">
            <param name="layouts_include" value="SmallThumbVideoLayouts" />
            <param name="visible" value="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)" />
        </include>
        <include>View_501_Banner</include>
        <control type="image">
            <include>OpenClose_FadeSlide_Left</include>
            <include>Vis_FadeSlide_Left</include>
            <left>110</left>
            <top>182</top>
            <width>469</width>
            <height>704</height>
            <fadetime>200</fadetime>
            <aspectratio>scale</aspectratio>
            <texture border="2" fallback="DefaultVideo.png" background="true">$VAR[PosterVar]</texture>
            <bordertexture colordiffuse="80FFFFFF">colors/black.png</bordertexture>
            <bordersize>4</bordersize>
            <visible>!Container.Content(addons)</visible>
            <visible>Control.IsVisible(50) | Control.IsVisible(51)</visible>
        </control>
        <include>Media_Menu</include>
        <include name="TopBar">
            <param name="breadcrumbs_label" value="$VAR[BreadcrumbsVideoVar]" />
            <param name="breadcrumbs_icon" value="icons/settings/video.png" />
        </include>
        <include>BottomBar</include>
    </controls>
</window>
